.outer td.oRight {padding: 0 !important; margin: 0 !important;}
body {
	color: #333333;
	font: 0.875em/1.4 Calibri,Arial,Helvetica,sans-serif;
	background: #FFF url(http://www.cision.com/uk/wp-content/themes/cision_new/images/assets/bg.gif);
	-webkit-font-smoothing: antialiased;
}

#wrapper {
	margin: 0 auto;
	padding: 0;
	padding-left: 25px;
	width:1100px;
	background:url(http://www.cision.com/uk/wp-content/themes/cision_new/images/bgwrapper.png) repeat-y;
	background-color:transparent;
}

.resources-container {
  margin: 0 10px 10px 20px;
  padding: 0;
  clear: both;
  float: left;
  width: 1040px;
}
.resources-main {
  float: left;
  width: 100%;
  height: 100%;
  min-height: 850px;
  float:left;
  display: block;
  position:relative;
  margin: 0 10px 0 0;
  /* top:-18px;
    padding:0;
    border-left: #CCCCCC 1px solid;
    border-right: #CCCCCC 1px solid; */
}
.resources-main h1 {
  /* margin-left: -20px;
  position:relative;
  top:-10px; */
  padding: 4px 8px;
  background: #F3EFF0;
  border-bottom: 2px solid #FAB02B;
  color: #000000;
  display: block;
  font-size: 1.6em;
}
.resources-main h2 {
  padding: 0 10px;
  margin: 0;
  clear: both;
  color: #AB0D47;
  font-size: 1.4em;
  font-weight: lighter;
}
.resources-main p {
  padding: 0 10px;
  margin: 6px 0;
  display: block;
}

.resources-list-item {
  background: #f3f3f3;
  margin: 0 0 15px 0;
  display: block;
  clear: both;
}

.resources-list-item h1 {
  /* background:#F3EFF0; */
  padding: 10px;
  margin: 5px 0;
  display: block;
  font-size: 1.6em;
  /* border-bottom:2px solid #FAB02B; */
  color:#000000;
}
.resources-list-item h1 a {
  position:relative;
  float:right;
  display: block;
  font-size:14px;
  background:#FAB02B;
  padding: 3px 10px;
  margin-left: 4px;
  text-decoration:none;
  color:#ffffff;
  -moz-border-radius:3px;
  -o-border-radius:3px;
  -webkit-border-radius:3px;
  border-radius:3px;
}
.resources-list-item h2 {
  padding: 5px 10px;
  display: block;
}
.resources-list-item h2 a {
  text-decoration: none;
}
.resources-list-item p {
  margin-bottom: 18px;
  padding: 0 10px;
  font-size: 14px;
  color: #666666;
}
a.resources-readmore {
  padding: 10px 20px;
