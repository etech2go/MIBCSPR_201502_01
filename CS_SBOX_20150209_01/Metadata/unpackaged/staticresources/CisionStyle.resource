fieldset {
	margin: 0 0 1.3em 0;
	width: 95%;
	display: block;
	margin: 5px auto;
	padding: 6px;
	border: #999 solid 1px;
}
input[type="text"], select, textarea {
	background: #F1F1F1;
	border: 1px solid #CCCCCC;
	border-radius: 5px 5px 5px 5px;
	-moz-border-radius: 5px 5px 5px 5px;
	-webkit-border-radius: 5px 5px 5px 5px;
	-o-border-radius: 5px 5px 5px 5px;
	box-shadow: 3px 2px 2px rgba(0, 0, 0, 0.1) inset;
	padding: 5px;
	width: 98%;
}
textarea {
	background: #F1F1F1;
	border-radius: 5px 5px 5px 5px;
	-moz-border-radius: 5px 5px 5px 5px;
	-webkit-border-radius: 5px 5px 5px 5px;
	-o-border-radius: 5px 5px 5px 5px;
	box-shadow: 3px 2px 2px rgba(0, 0, 0, 0.1) inset;
}
input[type=submit] {
	color: #ffffff;
	font-weight: bold;
	padding: 8px 20px;
	font-size: 20px;
	cursor: pointer;
	border-radius: 3px;
	-moz-border-radius: 3px;
	-o-border-radius: 3px;
	-webkit-border-radius: 3px;
	width: auto !important;
	margin: 10px auto !important;
	display: block;
	border: none;
	outline: none;
	background: #00A8F6;
}